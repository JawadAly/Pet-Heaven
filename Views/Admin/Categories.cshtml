@model List<Pet_Adoption_System.Models.Category>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@{
    ViewBag.Title = "Categories";
}
@Html.Raw(TempData["message"])
<div class="details">
    <div class="orders-area">
        <div class="orders-header">
            <h2 class="order-title">Add Categories</h2>
            @*<a href="" class="btn btn-primary rounded-pill order-btn">View All</a>*@
        </div>
        <hr />
        @using (Html.BeginForm("Categories", "Admin",FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <form class="pb-2">
                <div class="col-8 mb-3">
                    <label>Category Title:</label>
                    <input type="text" name="categoryTitle" class="form-control"  required/>
                </div>
                <div class="col-8 mb-3">
                    <label>Category Description:</label>
                    <textarea class="form-control" name="categoryDescription" required></textarea>
                </div>
                <div class="col-8 mb-3">
                    <label>Category Image(file):</label>
                    <input type="file" name="file" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        }


    </div>

    <div class="clients">
        <h3 class="order-title">Added Categories</h3>
        
        <table class="table">
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var singelCateg in Model)
                    {
                        <tr>
                            <td class="d-flex align-items-center">
                                <div class="user"><img src="~/images/@singelCateg.categoryImage" alt=""></div>
                                <div class="text-secondary ps-3">@singelCateg.categoryTitle</div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="d-flex align-items-center">
                            <h5>No Categories to show!</h5>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

<div class="footer w-100 p-3 fixed-bottom bg-dark">
    <p class="text-center text-white">Copyright © 2022 | Js-Dev . All rights Reserved .</p>
</div>



