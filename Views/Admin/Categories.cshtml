@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@{
    ViewBag.Title = "Categories";
}

<div class="details">
    <div class="orders-area">
        <div class="orders-header">
            <h2 class="order-title">Add Categories</h2>
            @*<a href="" class="btn btn-primary rounded-pill order-btn">View All</a>*@
        </div>
        <hr/>
        <form class="pb-2">
            <div class="col-8 mb-3">
                <label>Category Title:</label>
                <input type="text" class="form-control" />
            </div>
            <div class="col-8 mb-3">
                <label>Category Description:</label>
                <textarea class="form-control"></textarea>
            </div>
            <div class="col-8 mb-3">
                <label>Category Image(file):</label>
                <input type="file" class="form-control"/>
            </div>
            <button class="btn btn-primary">Add</button>
        </form>

    </div>

    <div class="clients">
        <h3 class="order-title">Added Categories</h3>
        

    </div>
</div>

<div class="footer w-100 p-3 fixed-bottom bg-dark">
    <p class="text-center text-white">Copyright © 2022 | Js-Dev . All rights Reserved .</p>
</div>



