<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pet Heaven</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/Index.css")
    @Styles.Render("~/Content/Account.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- nav -->
    <div class="navbar">
        <div class="container">
            <div class="navInner w-100 d-flex align-items-center justify-content-between">
                <div class="navLogo">
                    <a href="#">
                        <h3>@Html.ActionLink("Pet Heaven", "Index", "Home")</h3>
                    </a>
                </div>
                <input type="checkbox" id="navSideBar" class="d-none checkBoxSider">
                <label for="navSideBar" class="d-none navSideBarBtn d-flex align-items-center justify-content-center flex-column">
                    <div class="upperLine"></div>
                    <div class="middleLine"></div>
                    <div class="lowerLine"></div>
                </label>
                <div class="sideBar pt-2">
                    <ul class="navUl d-flex">
                        <li>
                            <a>@Html.ActionLink("Index", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Categories", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Categories", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Account", "Login", "Account")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- footer -->
    <div class="footer w-100 pt-1">
        <div class="container">
            <p class="text-center">CopyRight © @DateTime.Now.Year JQR Development. All Rights Reserved | Terms and Conditions applied.</p>
        </div>
    </div>


    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
