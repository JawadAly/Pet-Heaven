<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pet Heaven</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/Index.css" rel="stylesheet">
    <link href="~/Content/Account.css" rel="stylesheet">
    <link href="~/Content/reg.css" rel="stylesheet">
    @*@Styles.Render("~/Content/reg.css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        //var userData = TempData["userInfo"] as Pet_Adoption_System.Models.User;
        Pet_Adoption_System.Models.User userData = Session["userInfo"] as Pet_Adoption_System.Models.User;
    }
    <!-- nav -->
    <div class="navbar">
        <div class="container">
            <div class="navInner w-100 d-flex align-items-center justify-content-between">
                <div class="navLogo">
                    <a href="#">
                        <h3>@Html.ActionLink("Pet Heaven", "Index", "Home")</h3>
                    </a>
                </div>
                <input type="checkbox" id="navSideBar" class="d-none checkBoxSider">
                <label for="navSideBar" class="d-none navSideBarBtn d-flex align-items-center justify-content-center flex-column">
                    <div class="upperLine"></div>
                    <div class="middleLine"></div>
                    <div class="lowerLine"></div>
                </label>
                <div class="sideBar pt-2">
                    <ul class="navUl d-flex">
                        <li>
                            <a>@Html.ActionLink("Index", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Categories", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Categories", "Index", "Home")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Account", "Login", "Account")</a>
                        </li>

                        @if (userData != null )
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-regular fa-user me-2"></i>
                                    @userData.userName
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">@userData.userId</a></li>
                                    <li><a class="dropdown-item" href="#">Logout</a></li>
                                </ul>
                            </div>

                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- footer -->
    <div class="footer w-100 pt-1">
        <div class="container">
            <p class="text-center">CopyRight © @DateTime.Now.Year JQR Development. All Rights Reserved | Terms and Conditions applied.</p>
        </div>
    </div>


    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
